<?xml version="1.0" encoding="utf-8"?>

<!--缩放动画  从1倍放大到2倍 对称轴为中间-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="2"
        android:toYScale="2"
        android:pivotX="50%"
        android:pivotY="50%"/>
</set>